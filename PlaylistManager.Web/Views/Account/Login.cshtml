@model PlaylistManager.Models.User

@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">

    <hr />
    <div class="form-group col-md-10">
        <span asp-validation-for="Username" class="text-danger"></span>
        <input type="text" placeholder="Username" asp-for="Username" class="form-control" />
    </div>

    <div class="form-group col-md-10">
        <span asp-validation-for="Password" class="text-danger"></span>
        <input type="password" placeholder="Password" asp-for="Password" class="form-control" />
    </div>

    <div class="form-group">
        <div class="col-md-offset-1 col-md-10">
            <input type="submit" value="Login" class="btn btn-success" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10" style="padding: 0">
            <div class="h4">Don't have an account yet? @Html.ActionLink("Sign up here.", "Register")</div>
        </div>
    </div>
</div>
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
